/// <summary>
/// Allows to change pitch of the camera gimbal
/// </summary>
void gimbal(void) {
	// Just redirect gimbal_pitch variable to the timer
	TIMER3_BASE->CCR4 = gimbal_pitch;
	TIMER3_BASE->CNT = 5000;
}
